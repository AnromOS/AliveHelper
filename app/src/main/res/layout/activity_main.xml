<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="org.ancode.alivehelperdemo.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/onlygetdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="直接获取数据" />

            <Button
                android:id="@+id/alive_helper_acitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="直接显示默认acitivity" />


            <Button
                android:id="@+id/alive_helper_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="防杀指南通知" />

            <Button
                android:id="@+id/alive_stats_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="直接显示保活统计" />


            <Button
                android:id="@+id/alive_stats_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保活统计通知" />

            <Button
                android:id="@+id/open_alive_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开启AliveStats" />

            <Button
                android:id="@+id/close_alive_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭AliveStats" />

            <Button
                android:id="@+id/check_alivestats_alive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="检测统计是否开着"
                android:visibility="gone" />

            <Button
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!--<Button-->
            <!--android:id="@+id/send_broadcast_notification"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="弹出发送广播的Notify" />-->

            <!--<Button-->
            <!--android:id="@+id/send_dialog_notification"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="弹出打开Dialog的Notify" />-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
